{
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "paths": {
      "|integrator/*": ["./src/integrator/*"],
      "|logic/*": ["./src/architecture/logic/*"],
      "|ui/*": ["./src/integrator/ui/*"],
      "|ui-kit/*": ["./src/integrator/ui-kit/*"],
      "||/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.vue",
    "src/**/*.test.vue",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "extends": "./tsconfig.json",
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.vue"]
}
